{
  "manifest_version": 2,
  "name": "Humble Mode",
  "version": "1.0",
  "description": "Removes images where possible and turns everything to black and white",
  "author": "Rambalac",
  "icons": {"128": "icon.png"},
  "browser_action": {"default_icon": "icon.png"},
  
  "background": {
    "scripts": ["button.js"],
    "persistent": true
  },
  
  "content_scripts": [
	  {
		  "matches": [
			  "http://*/*",
			  "https://*/*"
      ],
		  "all_frames": true,
		  "css": ["bandw.css"],
		  "js": ["bandw.js"],
		  "run_at": "document_start"
	  }
  ],
  "web_accessible_resources": [	"dummy.png"],
  "permissions": [
    "activeTab",
	  "storage",
	  "webRequest",
	  "webRequestBlocking",
	  "<all_urls>"
  ]
}